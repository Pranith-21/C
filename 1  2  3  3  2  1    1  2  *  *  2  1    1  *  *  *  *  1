#include <stdio.h>

int main()
{
int i,j,n;
scanf("%d",&n);
int p=0,q=n;
for(i=n;i>0;i--)
    {
        for(j=1;j<=n;j++)
           {    
               if(j<(i+1))
                printf(" %d ",j);
               else
                printf(" * ");
           }
        for(j=n;j>=1;j--)
           {    
               if(j<(i+1))
                printf(" %d ",j);
               else
                printf(" * ");
           }
            
     printf("\n\n");     
    }
   return 0;
}
