#include <stdio.h>

int main()
{
int i,j,n;
scanf("%d",&n);
int p=0,q=n;
for(i=0;i<n;i++)
    {
        if(i%2==0)
        {
        for(j=0;j<n;j++)
           printf("%d ",++p);         
        }
        else
        {
            p=p+n;
            for(j=0;j<n;j++)
               printf("%d ",p-j);         

        }
            
     printf("\n");     
    }
   return 0;
}
